@model IEnumerable<Repositories.Gasto>

@{
    Layout = "~/Views/Shared/_LogueadoLayout.cshtml";
    ViewBag.Title = "Gastos";
    int consorcioId = ViewBag.ConsorcioId;

    Repositories.Consorcio consorcio = ViewBag.Consorcio;
}

<section class="bg-white rounded">
    <div class="d-flex justify-content-between py-2 px-3">
        <h2>Consorcio @consorcio.Nombre</h2>
        <p>
            @Html.ActionLink("Nuevo gasto", "Add", new { id = consorcioId }, new { @class = "btn btn-primary" })
        </p>
    </div>
    <table id="table" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AnioExpensa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MesExpensa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoGasto.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaGasto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Monto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ArchivoComprobante)
                </th>
                <th>
                    Eliminar
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnioExpensa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MesExpensa)
                    </td>
                    <td>
                        @Html.ActionLink(item.Nombre, "Update", new { id = item.IdGasto })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoGasto.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaGasto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Monto)
                    </td>
                    <td>
                        @Html.ActionLink("Descargar comprobante", "Download", new { id = item.IdGasto })
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Delete", new { id = item.IdGasto }, new { @class = "fa fa-trash text-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
