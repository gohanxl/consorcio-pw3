@model IEnumerable<Repositories.Gasto>

@{
    Layout = "~/Views/Shared/_LogueadoLayout.cshtml";
    ViewBag.Title = "Home";
}
@{Html.RenderPartial("_pv_AddGastoModal", new Repositories.Gasto());}

<div class="container my-5 bg-white rounded">
    <button type="button" class="btn btn-primary m-3" data-toggle="modal" data-target="#addGastoModal">
        Agregar Gasto
    </button>
    <table id="table" class="table table-striped table-bordered table-responsive w-100">
        <thead>
            <tr>
                <th>Año Expensa</th>
                <th>Mes Expensa</th>
                <th>Nombre</th>
                <th>Tipo Gasto</th>
                <th>Fecha Gasto</th>
                <th>Monto</th>
                <th>Archivo Comprobante</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gasto in Model)
            {
                <tr>
                    <td>@gasto.AnioExpensa</td>
                    <td>@gasto.MesExpensa</td>
                    <td>@gasto.Nombre</td>
                    <td>@gasto.TipoGasto.Nombre</td>
                    <td>@gasto.FechaGasto</td>
                    <td>@gasto.Monto</td>
                    <td>@gasto.ArchivoComprobante</td>
                    <td>
                        @*@Html.ActionLink("Edit", null, null, new { id = gasto.IdGasto, data_toggle = "modal", data_target = "#editGastoModal", }, null)*@
                        <button type="button" class="btn btn-primary m-3" data-toggle="modal" data-target="#editGastoModal">
                            Editar Gasto 
                        </button>
                        @* Agregar un modal nuevo con el nombre de editGastoModal, action link no sirve acá. Podemos investigar para solo usar 1 solo form
                            pero creo que no hay. Si la hay, vamos a tener que usar ajax
                            Si creamos una nueva view, deberiamos crear una carpeta de Gastos adentro de Shared?
                            *@
                        @Html.ActionLink("Delete", "Delete", "Gastos", new { id = gasto.IdGasto }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>