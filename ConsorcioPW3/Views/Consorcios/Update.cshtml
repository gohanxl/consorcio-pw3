@model Repositories.Consorcio

@{
    Layout = "~/Views/Shared/_LogueadoLayout.cshtml";
    ViewBag.Title = "Actualizar consorcio";

    List<Repositories.Provincia> provincias = ViewBag.Provincias as List<Repositories.Provincia>;

    List<SelectListItem> provinciasItems = provincias.Select(o => new SelectListItem()
    {
        Text = o.Nombre,
        Value = o.IdProvincia.ToString()
    }).ToList();

    int unidadesCount = ViewBag.UnidadesCount;
}

<section class="container bg-white rounded mb-3 p-3">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.IdConsorcio)
        @Html.HiddenFor(model => model.IdUsuarioCreador)
        <div class="form-horizontal">
            <h4>Consorcio @Model.Nombre - Editando</h4>
            <hr />
            <div class="row mx-0">
                <div class="col-md-10 pl-0">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IdProvincia, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.DropDownList("IdProvincia", provinciasItems, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IdProvincia, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Ciudad, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Ciudad, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Ciudad, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Calle, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Calle, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Calle, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Altura, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Altura, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Altura, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DiaVencimientoExpensas, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.DiaVencimientoExpensas, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DiaVencimientoExpensas, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-2 pl-4 mt-4">
                    <h5 class="mb-4">@unidadesCount unidades</h5>
                    <p>
                        @Html.ActionLink("Ver Unidades", "Index", "Unidades", new { id = Model.IdConsorcio }, null)
                    </p>
                    <p>
                        @Html.ActionLink("Ver Expensas", "Index", "Expensas", new { id = Model.IdConsorcio }, null)
                    </p>
                    <p>
                        @Html.ActionLink("Ver Gastos", "Index", "Gastos", new { id = Model.IdConsorcio }, null)
                    </p>
                </div>
            </div>
            <div class="form-inline">
                <div class="mx-3">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>

                <div class="mx-3">
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    }
</section>
