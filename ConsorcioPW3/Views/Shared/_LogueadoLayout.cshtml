@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
    ViewBag.Title = "";
}

@section Header {

    <nav class="navbar navbar-expand-lg navbar-fixed-top primary-color">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Bienvenido")" id="loginLink">
                <img class="main-logo" src="~/Assets/Pictures/logo.png" alt="logo-inicio" />
            </a>
            <button class="navbar-toggler text-white" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                @if (HttpContext.Current.User.Identity.IsAuthenticated)
                {
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a href="@Url.Action("Index", "Consorcios")" id="my-consortiums" class="text-decoration-none">
                            <span class="text-white">Mis Consorcios</span>
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a href="@Url.Action("Index", "Gastos")" id="gastos" class="text-decoration-none">
                            <span class="text-white">Mis Gastos</span>
                        </a>
                    </li>
                </ul>
                    <div class="my-1">
                        <span class="text-white">Bienvenido @HttpContext.Current.User.Identity.Name</span>
                        @Html.ActionLink("Cerrar sesion", "Logout", "Home", null, new { @class = "btn btn-danger text-white" })
                    </div>
                }
            </div>
        </div>
    </nav>

}

@RenderBody()

