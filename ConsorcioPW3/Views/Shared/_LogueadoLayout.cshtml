@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

@section Header {
    <nav class="navbar navbar-expand-lg navbar-fixed-top navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")" id="loginLink">
                <img class="main-logo" src="~/Assets/Pictures/logo.png" alt="logo-inicio" />
            </a>
            <button class="navbar-toggler text-white" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                @if (HttpContext.Current.User.Identity.IsAuthenticated)
                {
                    <div class="my-3">
                        <span class="text-white mr-4">Bienvenido @HttpContext.Current.User.Identity.Name</span>
                        @*@Html.ActionLink("Cerrar sesion", "Logout", "Home", null, new { @class = "btn btn-danger text-white" })*@
                    </div>
                    <div class="nav-item dropdown">
                        <a class="nav-link" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="navbar-toggler-icon"></span>
                        </a>
                        <div class="dropdown-menu custom-dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a href="@Url.Action("Index", "Consorcios")" id="my-consortiums" class=" dropdown-item">
                                <span>Mis Consorcios</span>
                            </a>
                            @Html.ActionLink("Cerrar sesion", "Logout", "Home", null, new { @class = "dropdown-item text-danger" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </nav>

}

@RenderBody()

