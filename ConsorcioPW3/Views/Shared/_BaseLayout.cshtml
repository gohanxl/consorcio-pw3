<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/styles/css")

</head>
<body>
    <img class="position-fixed background-picture" src="~/Assets/Pictures/fondo-edificio.png" alt="Alternate Text" />
    <div class="d-flex flex-column justify-content-center flex-grow-1">
        @RenderSection("Header", true);
        <div class="container">
            @Html.MvcSiteMap().SiteMapPath()
            <div class="body-content">
                @Html.Partial("_pv_Notifications")
                @RenderBody()
            </div>
            @{Html.RenderPartial("_pv_Footer");}
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryDataTables")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/tableBootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/table")
</body>
</html>